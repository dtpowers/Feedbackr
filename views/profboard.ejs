<% layout('layout') -%>

<div class="uk-container uk-container-center">

	<!-- Nice trick to align the button with the header! -->
	<!-- http://stackoverflow.com/questions/13136194/place-button-group-at-the-far-right-side-of-a-header-with-bootstrap -->
	<h1>
		Recent Assignments
		<a href="#new-assignment-modal" data-uk-modal class="uk-button uk-button-primary uk-button-large uk-float-right">Create New Assignment</a>
		<!-- The above button opens the modal which is included in the "create-assignment-modal" partial -->
	</h1>

	<div class="uk-grid" data-uk-grid-margin>

		<% for(var i = 0; i < 3; i++) { %>
		<div class="uk-width-1-1">
			<div class="uk-panel uk-panel-box profAssignment">
				<div class="uk-grid">
					<div class="uk-width-1-6 uk-text-center">
						<h2>76-101</h2>
					</div>
					<div class="uk-width-3-6">
						<h3 class="uk-margin-bottom-remove">Interp Final Essay Review</h3>
						<p class="uk-margin-top-remove">
							Submission due September 10 at 11:59 pm. <br/>
							Feedback due September 12 at 11:59 pm.
						</p>
					</div>
					<div class="uk-width-1-6 uk-text-center">
						<h3>100%</h3>
						<p>Submitted</p>
					</div>
					<div class="uk-width-1-6 uk-text-center">
						<h3>100%</h3>
						<p>Feedback provided</p>
					</div>
				</div>
			</div>
		</div>
		<% } %>

	</div>

	<hr class="uk-margin-large-top" />

	<h1>Past Assignments</h1>

	<div class="uk-grid" data-uk-grid-margin>

		<% for(var i = 0; i < 5; i++) { %>
		<div class="uk-width-1-3">

			<div class="uk-panel uk-panel-box profAssignment">
				<h2 class="uk-h3">67-272</h2>
				<h3 class="uk-margin-top-remove">Final Project Peer Review:</h3>

				<p>
					Due September 10 at 11:59 pm. <br/>
					Feedback by September 12 at 11:59.
				</p>
			</div>
		</div>
		<% } %>

	</div>


	<% include create-assignment-modal %>


</div>
