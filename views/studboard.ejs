<% layout('layout') -%>

<div class="uk-container">

	<h3>76-101</h3>
	<h2>Interp Final Essay</h2>

	<div class="uk-grid">
		<div class="uk-width-2-3 uk-container-center">
			<h3>Your Submission</h3>

			<div class="uk-panel uk-panel-box uk-text-center uk-panel-space">
				<p>Submission due by 4th September at 11:59 PM</p>

				<div class="uk-placeholder uk-placeholder-large">
					<i class="uk-icon-upload uk-icon-large"></i>
					<br/><br/>

					<div class="uk-form-file">
						<button class="uk-button uk-button-primary">Choose a file</button>
						<input type="file">
					</div>
					or drag it here
				</div>

				<div class="uk-text-right">
					<a class="uk-button uk-button-success uk-margin-small-bottom">Submit</a>
				</div>

			</div>
		</div>
	</div>


	<div class="uk-grid">
		<div class="uk-width-2-3 uk-container-center">
			<h3>Your Submission</h3>

			<div class="uk-panel uk-panel-box uk-text-center uk-panel-space">
				<div class="uk-grid">
					<div class="uk-width-2-10 uk-vertical-align" style="height: 60px;">
						<div class="uk-vertical-align-middle">
							<i class="uk-icon-file-text-o uk-icon-large"></i>
						</div>
					</div>

					<div class="uk-width-4-10 uk-text-left">
						<h3>FileName.pdf</h3>
						<p>Submitted September 4 at 11:59pm</p>
					</div>

					<div class="uk-width-2-10">
						<h3>4</h3>
						<p>responses</p>
					</div>

					<div class="uk-width-2-10">
						<h3>2</h3>
						<p>comments</p>
					</div>
				</div>

			</div>
		</div>
	</div>


	<div class="uk-grid">
		<div class="uk-width-1-1">
			<div class="uk-panel uk-panel-box">
				<h3>Your Submission</h3>
				<div class="uk-grid">
					<div class="uk-width-1-3">
						<h3>FileName.pdf</h3>
						<p>Submitted 4th September at 11:59 PM</p>
					</div>
					<div class="uk-width-1-3">
						<h3>4</h3>
						<p>Responses</p>
					</div>
					<div class="uk-width-1-3">
						<h3>2</h3>
						<p>Comments</p>
					</div>
				</div>
			</div>
		</div>
	</div>



	<h2>Required Reviews</h2>

	<div class="uk-grid" data-uk-grid-margin>

		<% for(var i = 0; i < 5; i++) { %>
		<div class="uk-width-1-3">
			<div class="uk-panel uk-panel-box">
				<div class="uk-grid">
					<div class="uk-width-1-3">
						<h2><%= i+1 %></h2>
						<p>DONE</p>
					</div>
					<div class="uk-width-1-3">
						<h4>2</h4>
						<p>Responses</p>
					</div>
					<div class="uk-width-1-3">
						<h4>0</h4>
						<p>Comments</p>
					</div>
				</div>
			</div>
		</div>
		<% } %>

	</div>
</div>
