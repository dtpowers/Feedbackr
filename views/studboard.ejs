<% layout('layout') -%>

<div class="uk-container">

	<h3>76-101</h3>
	<h2>Interp Final Essay</h2>

	<div class="uk-grid before-submission">
		<div class="uk-width-2-3 uk-container-center">
			<h3>Your Submission</h3>

			<div class="uk-panel uk-panel-box uk-text-center uk-panel-space">
				<p>Submission due by 4th September at 11:59 PM</p>

				<div class="uk-placeholder uk-placeholder-large">
					<i class="uk-icon-upload uk-icon-large"></i>
					<br/><br/>

					<div class="uk-form-file">
						<button class="uk-button uk-button-primary">Choose a file</button>
						<input type="file" class="file-input">
					</div>
					or drag it here
				</div>

				<div class="uk-text-right">
					<a class="uk-button uk-button-success uk-margin-small-bottom submit-file">Submit</a>
				</div>

			</div>
		</div>
	</div>


	<div class="uk-grid after-submission" style="display: none;">
		<div class="uk-width-2-3 uk-container-center">
			<h3>Your Submission</h3>

			<div class="uk-panel uk-panel-box uk-text-center uk-panel-space">
				<div class="uk-grid">
					<div class="uk-width-1-10 uk-vertical-align" style="height: 60px;">
						<div class="uk-vertical-align-middle">
							<i class="uk-icon-file-text-o uk-icon-large"></i>
						</div>
					</div>

					<div class="uk-width-5-10 uk-text-left">
						<h3>FileName.pdf</h3>
						<p>Submitted September 4 at 11:59pm</p>
					</div>

					<div class="uk-width-2-10">
						<h3>4</h3>
						<p>responses</p>
					</div>

					<div class="uk-width-2-10">
						<h3>2</h3>
						<p>comments</p>
					</div>
				</div>

			</div>
		</div>
	</div>


	<h2>Required Reviews</h2>

	<div class="uk-grid uk-grid-large uk-text-center" data-uk-grid-margin>

		<% for(var i = 0; i < 5; i++) { %>
		<div class="uk-width-1-3">
			<div class="uk-panel uk-panel-box">
				<div class="uk-grid">
					<div class="uk-width-1-3 uk-vertical-align" style="height: 60px;">
						<div class="uk-vertical-align-middle">
							<% if(i < 2) { %>
								<i class="uk-icon-check-square-o uk-icon-large uk-icon-justify uk-text-middle"></i>
							<% } else { %>
								<i class="uk-icon-square-o uk-icon-large uk-icon-justify uk-text-middle"></i>
							<% } %>
							<span class="uk-h2 uk-text-middle"><%= i+1 %></span>
						</div>
					</div>
					<div class="uk-width-1-3">
						<h3>2</h3>
						<p>Responses</p>
					</div>
					<div class="uk-width-1-3">
						<h3>0</h3>
						<p>Comments</p>
					</div>
				</div>
			</div>
		</div>
		<% } %>

	</div>
</div>

<script>
	$(".submit-file").click(function() {
		$(".before-submission").hide();
		$(".after-submission").show();
	});


	$(".file-input").change(function(){
		// If we get around to it, implement something to show what file was selected
	});
</script>
